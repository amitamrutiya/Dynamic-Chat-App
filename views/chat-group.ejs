<%- include('layouts/header.ejs')%>

<h2 class="mb-4">Group Chatting</h2>

<div class="row">
  <div class="col-md-3">
    <ul class="list-group">
      <% if(myGroups.length>0){ for (let i = 0; i < myGroups.length; i++) { %>
      <li
        class="list-group-item list-group-item-dark cursor-pointer group-list"
        data-id="<%= myGroups[i]['_id'] %>"
      >
        <img
          src="/<%= myGroups[i]['image'] %>"
          alt="<%= myGroups[i]['name'] %>"
          width="50px"
          height="50px"
        />
        <%= myGroups[i]['name'] %>
      </li>
      <% } } else{ %>
      <li class="list-group-item list-group-item-dark">No Created Group</li>
      <% } %>

      <!-- Joined Groups -->
      <% if(joinedGroups.length>0){ for (let i = 0; i < joinedGroups.length;
      i++) { %>
      <li
        class="list-group-item list-group-item-dark cursor-pointer group-list"
        data-id="<%= joinedGroups[i]['group_id']['_id'] %>"
      >
        <img
          src="/<%= joinedGroups[i]['group_id']['image'] %>"
          alt="<%= joinedGroups[i]['group_id']['name'] %>"
          width="50px"
          height="50px"
        />
        <%= joinedGroups[i]['group_id']['name'] %>
      </li>
      <% } } else{ %>
      <li class="list-group-item list-group-item-dark">No Joined Groups</li>
      <% } %>
    </ul>
  </div>
  <div class="col-md-9">
    <h3 class="group-start-head">Click to Start the Chat</h3>
    <div class="group-chat-section">
      <div id="group-chat-container"></div>

      <form action="save-chat" method="post" id="group-chat-form">
        <input
          class="border"
          type="text"
          name="message"
          placeholder="Enter message"
          id="group-message"
          required
        />
        <input type="submit" value="Send Message" class="btn btn-primary" />
      </form>
    </div>
  </div>
</div>

<%- include('layouts/footer.ejs')%>
