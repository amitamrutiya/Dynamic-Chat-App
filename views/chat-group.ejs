<%- include('layouts/header.ejs')%>

<h2 class="mb-4">Group Chatting</h2>

<div class="row">
  <div class="col-md-3">
    <ul class="list-group">
      <% if(myGroups.length>0){ for (let i = 0; i < myGroups.length; i++) { %>
      <li
        class="list-group-item list-group-item-dark cursor-pointer group-list"
        data-id="<%= myGroups[i]['_id'] %>"
      >
        <img
          src="/<%= myGroups[i]['image'] %>"
          alt="<%= myGroups[i]['name'] %>"
          width="50px"
          height="50px"
        />
        <%= myGroups[i]['name'] %>
      </li>
      <% } } else{ %>
      <li class="list-group-item list-group-item-dark">No Created Group</li>
      <% } %>

      <!-- Joined Groups -->
      <% if(joinedGroups.length>0){ for (let i = 0; i < joinedGroups.length;
      i++) { %>
      <li
        class="list-group-item list-group-item-dark cursor-pointer group-list"
        data-id="<%= joinedGroups[i]['group_id']['_id'] %>"
      >
        <img
          src="/<%= joinedGroups[i]['group_id']['image'] %>"
          alt="<%= joinedGroups[i]['group_id']['name'] %>"
          width="50px"
          height="50px"
        />
        <%= joinedGroups[i]['group_id']['name'] %>
      </li>
      <% } } else{ %>
      <li class="list-group-item list-group-item-dark">No Joined Groups</li>
      <% } %>
    </ul>
  </div>
  <div class="col-md-9">
    <h3 class="group-start-head">Click to Start the Chat</h3>
    <div class="group-chat-section">
      <div id="group-chat-container"></div>

      <form action="save-chat" method="post" id="group-chat-form">
        <input
          class="border"
          type="text"
          name="message"
          placeholder="Enter message"
          id="group-message"
          required
        />
        <input type="submit" value="Send Message" class="btn btn-primary" />
      </form>
    </div>
  </div>
</div>

<!-- Delete Model -->
<div
  class="modal fade"
  id="deleteGroupChatModel"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Delete Chat</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="" id="delete-group-chat-form">
        <div class="modal-body">
          <input type="hidden" name="id" id="delete-group-message-id" />
          <p>Are you sure you wnat to delete below Message?</p>
          <p><b id="delete-group-message"></b></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-danger">Delete</button>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- Update Model -->
<div
  class="modal fade"
  id="editGroupChatModel"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Edit Chat</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="" id="edit-group-chat-form">
        <div class="modal-body">
          <input type="hidden" name="id" id="edit-group-message-id" />
          <input
            type="text"
            name="message"
            id="edit-group-message"
            required
            placeholder="Enter Message"
          />
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('layouts/footer.ejs')%>
